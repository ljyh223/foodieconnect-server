<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ljyh.tabletalk.mapper.UserRecommendationMapper">

    <!-- 批量更新推荐状态 -->
    <update id="batchUpdateViewedStatus">
        UPDATE user_recommendations 
        SET is_viewed = #{isViewed}, updated_at = NOW()
        WHERE id IN
        <foreach collection="recommendationIds" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>

</mapper>